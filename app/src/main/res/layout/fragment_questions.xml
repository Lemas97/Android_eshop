<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/quantityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"

        android:layout_marginTop="79dp"
        android:text="Υπόλοιπο Προϊώντων"
        android:textSize="12sp" />

    <Button
        android:id="@+id/salesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="30dp"
        android:text="Συνολικές Πωλήσεις"
        android:textSize="12sp" />

    <Button
        android:id="@+id/productSalesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salesBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="33dp"
        android:text="Πωλήσεις Προιώντων"
        android:textSize="12sp" />

    <Button
        android:id="@+id/customersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productSalesBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="33dp"
        android:text="Κατάσταση Πελατών"
        android:textSize="12sp" />

    <Button
        android:id="@+id/productsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customersBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="21dp"
        android:text="Κατάσταση Προϊώντων"
        android:textSize="12sp" />

</RelativeLayout>
